<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="org.teachkids.Dictation" version="0.0.1">
    <name>Spelling Stars</name>
    <description>
        Simple app to record dictation words and test.
    </description>
    <author email="Seeniraj@users.noreply.github.com" href="http://cordova.io">
        Seeniraj
    </author>
    <content src="index.html"/>
    <access origin="*"/>
	<!-- For icon and splashscreen refer to http://cordova.apache.org/docs/en/5.0.0/config_ref_images.md.html#Icons%20and%20Splash%20Screens -->
	<icon src="res/icon.png" />
	<preference name="splashScreen" value="screen" /> <!-- value must be set to screen not splash -->
	<preference name="SplashScreenDelay" value="2000" />
	<platform name="android">

		<splash src="res/screen/android/splash-hdpi.png" density="land-hdpi"/>
		<splash src="res/screen/android/splash-ldpi.png" density="land-ldpi"/>
		<splash src="res/screen/android/splash-mdpi.png" density="land-mdpi"/>
		<splash src="res/screen/android/splash-xhdpi.png" density="land-xhdpi"/>
		<splash src="res/screen/android/splash-xxhdpi.png" density="land-xxhdpi"/>
		<splash src="res/screen/android/splash-xxxhdpi.png" density="land-xxxhdpi"/>

		<splash src="res/screen/android/splash-hdpi.png" density="port-hdpi"/>
		<splash src="res/screen/android/splash-ldpi.png" density="port-ldpi"/>
		<splash src="res/screen/android/splash-mdpi.png" density="port-mdpi"/>
		<splash src="res/screen/android/splash-xhdpi.png" density="port-xhdpi"/>
		<splash src="res/screen/android/splash-xxhdpi.png" density="port-xxhdpi"/>
		<splash src="res/screen/android/splash-xxxhdpi.png" density="port-xxxhdpi"/>

